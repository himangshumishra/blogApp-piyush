<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>
<title>Blog app</title>

</head>
<body>
    <%- include('./partials/nav') %>
   <div class="container mt-4">
       <%blogs.forEach(blog => {%>
        <div class="card" style="width: 18rem;">
            <img src="<%=  blog.featuredImageUrl %>" class="card-img-top" height="200px" width="200px" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title%></h5>
              <a href="/blogs/<%= blog._id  %>" class="btn btn-primary">Read Now</a>
            </div>
          </div>
          
       <%});%>
    <%- include('./partials/scripts') %>
</body>
</html>