<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head') %>
<title>Blog app</title>

</head>
<body>
    <%- include('./partials/nav') %>
<div class="container">
    <h1><%=blog.title%></h1>
    <div class="mt-4">
        <img src="<%= blog.createdBy.profileImageUrl  %>" width="60px" height="60px" alt="">
        <%= blog.createdBy.name  %>
    </div>
    <img src="<%= blog.featuredImageUrl  %>" height="200px" width="200px">

    <p><%= blog.body %></p>
    <div class="container mt-4">
    
        <h1>Comment <%= comments.length %></h1>
        <% if (locals.user){ %>
   
        <form action="/blogs/comment/<%= blog._id %>" method="post">
            <div class="mt-3">
                <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                <button type="submit" class="btn btn-sm btn-primary mt-2">Submit</button>
            </div>

        </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageUrl %>" alt=""  width="60px" height="60px"/>
                    <%= comment.createdBy.name%>
                    <pre><%= comment.content %></pre>
                </div>
           <% }); %>
        </div>

    </div>

</div>
    <%- include('./partials/scripts') %>
</body>
</html>